@model BabyShop.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Product Details</h1>

<div class="card shadow p-4 mt-3">
    <div class="row">
        <!-- Product Image -->
        <img src="@(Model.ImageUrl.StartsWith("/images") ? Model.ImageUrl : Url.Content("~/images/" + Model.ImageUrl))"
             alt="@Model.Name"
             class="img-fluid rounded shadow-sm border"
             style="max-height: 300px; object-fit: contain;" />


        <!-- Product Information -->
        <div class="col-md-8">
            <h3 class="text-primary">@Model.Name</h3>
            <p class="text-muted"><strong>Category:</strong> @Model.Category</p>
            <h4 class="text-success">₹@Model.Price</h4>

            <hr />

            <p><strong>Description:</strong></p>
            <p>@Model.Description</p>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
