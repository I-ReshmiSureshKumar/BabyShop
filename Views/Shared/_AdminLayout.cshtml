<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Dashboard</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

    <style>
        #sidebar-wrapper {
            width: 250px;
        }

        #wrapper.toggled #sidebar-wrapper {
            margin-left: -250px;
        }

        .submenu-item {
            padding-left: 40px !important;
        }
    </style>
</head>

<body>
    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-dark text-white border-end" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4">Admin Panel</div>

            <div class="list-group list-group-flush">

                <a class="list-group-item list-group-item-action bg-dark text-white"
                   href="@Url.Action("Dashboard", "Admin")">
                    Dashboard
                </a>

                <!-- Users Menu -->
                <a class="list-group-item list-group-item-action bg-dark text-white"
                   data-bs-toggle="collapse"
                   href="#usersMenu"
                   aria-expanded="false">
                    Users ▾
                </a>

                <div class="collapse submenu" id="usersMenu" data-bs-parent="#sidebar-wrapper">
                    <a href="@Url.Action("ManageUsers", "Admin")" class="list-group-item bg-secondary text-white submenu-item">Manage Users</a>
                    <a href="@Url.Action("AddUser", "Admin")" class="list-group-item bg-secondary text-white submenu-item">Add User</a>
                </div>

                <!-- Products Menu -->
                <a class="list-group-item list-group-item-action bg-dark text-white"
                   data-bs-toggle="collapse"
                   href="#productMenu"
                   aria-expanded="false">
                    Products ▾
                </a>

                <div class="collapse submenu" id="productMenu" data-bs-parent="#sidebar-wrapper">
                    <a href="@Url.Action("AddNewProducts", "Admin")" class="list-group-item bg-secondary text-white submenu-item">Add Product</a>
                    <a href="@Url.Action("ManageProducts", "Admin")" class="list-group-item bg-secondary text-white submenu-item">Manage Products</a>
                </div>

                <!-- Orders Menu -->
                <a class="list-group-item list-group-item-action bg-dark text-white"
                   data-bs-toggle="collapse"
                   href="#orderMenu"
                   aria-expanded="false">
                    Orders ▾
                </a>

                <div class="collapse submenu" id="orderMenu" data-bs-parent="#sidebar-wrapper">
                    <a href="@Url.Action("ViewOrders", "Admin")" class="list-group-item bg-secondary text-white submenu-item">All Orders</a>
                    <a href="@Url.Action("PendingOrders", "Admin")" class="list-group-item bg-secondary text-white submenu-item">Pending Orders</a>
                </div>
                <a class="list-group-item list-group-item-action bg-dark text-white"
                   data-bs-toggle="collapse"
                   href="#orderMenu"
                   aria-expanded="false">
                    Settings ▾
                </a>
                <div class="collapse submenu" id="orderMenu" data-bs-parent="#sidebar-wrapper">
                    <a href="@Url.Action("SliderImagesForm", "Admin")" class="list-group-item bg-secondary text-white submenu-item">Add Slider Images</a>
                    <a href="@Url.Action("PendingOrders", "Admin")" class="list-group-item bg-secondary text-white submenu-item">Pending Orders</a>
                </div>

            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="w-100">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="menu-toggle">☰</button>
                    <span class="navbar-brand ms-3">Dashboard</span>
                </div>
            </nav>

            <div class="container-fluid mt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Toggle Sidebar
        const toggleButton = document.getElementById('menu-toggle');
        const wrapper = document.getElementById('wrapper');
        toggleButton.addEventListener('click', () => {
            wrapper.classList.toggle('toggled');
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
