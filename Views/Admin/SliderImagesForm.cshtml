@model BabyShop.Models.SliderImageViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">

    <h2>Add Slider Image</h2>

    @using (Html.BeginForm("SliderImagesForm", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="card p-4 shadow-sm">

            <!-- Image Upload -->
            <div class="mb-3">
                <label class="form-label">Upload Image</label>
                <input type="file" name="ImageFile" class="form-control" required />
            </div>

            <!-- Caption Title -->
            <div class="mb-3">
                <label class="form-label">Caption Title</label>
                @Html.TextBoxFor(m => m.NewSlider.CaptionTitle, new { @class = "form-control", placeholder = "Enter Caption Title" })
            </div>

            <!-- Caption Text -->
            <div class="mb-3">
                <label class="form-label">Caption Text</label>
                @Html.TextAreaFor(m => m.NewSlider.CaptionText, new { @class = "form-control", placeholder = "Enter Caption Text", rows = 3 })
            </div>

            <button type="submit" class="btn btn-primary w-100">Add Slider Image</button>
        </div>
    }

    <hr />

    <h3 class="mt-4">Existing Slider Images</h3>

    <table class="table table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Caption</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.SliderImages != null && Model.SliderImages.Any())
            {
                foreach (var item in Model.SliderImages)
                {
                    <tr>
                        <td><img src="@item.ImageUrl" width="120" /></td>
                        <td>@item.CaptionTitle</td>
                        <td>@item.CaptionText</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">No slider images found</td>
                </tr>
            }
        </tbody>
    </table>

</div>
