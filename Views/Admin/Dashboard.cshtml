@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Dashboard";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - BabyBloom</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #fff0f7;
            font-family: 'Poppins', sans-serif;
        }

        .page-title {
            text-align: center;
            font-size: 2rem;
            font-weight: 700;
            color: #ff5fa2;
            margin-top: 40px;
            margin-bottom: 30px;
        }

        .dashboard-card {
            background: #ffffff;
            padding: 25px;
            border-radius: 20px;
            box-shadow: 0 4px 15px rgba(255, 105, 160, 0.15);
            text-align: center;
            transition: 0.2s ease-in-out;
        }

            .dashboard-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 25px rgba(255, 105, 160, 0.25);
            }

            .dashboard-card h4 {
                color: #ff5fa2;
                font-weight: 700;
                margin-bottom: 10px;
            }

        .btn-dashboard {
            background: #ff5fa2;
            color: white;
            border-radius: 10px;
            padding: 8px 18px;
            font-weight: 600;
            border: none;
        }

            .btn-dashboard:hover {
                background: #ff3989;
                color: #fff;
            }
    </style>
</head>

<body>

    <h2 class="page-title">👑 Admin Dashboard</h2>

    <div class="container">
        <div class="row g-4">

            <div class="col-md-4">
                <div class="dashboard-card">
                    <h4>🧸 Manage Products</h4>
                    <p>Add, edit, delete baby products.</p>
                    <button class="btn-dashboard">Open</button>
                </div>
            </div>

            <div class="col-md-4">
                <div class="dashboard-card">
                    <h4>📦 Manage Categories</h4>
                    <p>Create and update product categories.</p>
                    <button class="btn-dashboard">Open</button>
                </div>
            </div>

            <div class="col-md-4">
                <div class="dashboard-card">
                    <h4>🛒 Orders</h4>
                    <p>View and process customer orders.</p>
                    <button class="btn-dashboard">Open</button>
                </div>
            </div>

            <div class="col-md-4">
                <div class="dashboard-card">
                    <h4>👤 Users</h4>
                    <p>Manage registered users.</p>
                    <button class="btn-dashboard">Open</button>
                </div>
            </div>

            <div class="col-md-4">
                <div class="dashboard-card">
                    <h4>📊 Reports</h4>
                    <p>Sales and product insights.</p>
                    <button class="btn-dashboard">Open</button>
                </div>
            </div>

            <div class="col-md-4">
                <div class="dashboard-card">
                    <h4>⚙ Settings</h4>
                    <p>Update website and admin settings.</p>
                    <button class="btn-dashboard">Open</button>
                </div>
            </div>

        </div>
    </div>

</body>
</html>
