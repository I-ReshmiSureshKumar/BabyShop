@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg p-4" style="border-radius:20px; border: 2px solid #f8c8dc;">
                <h3 class="text-center mb-4" style="color:#ff69b4; font-weight:700;">
                    👶 Create Your Baby Shop Account
                </h3>

                <form method="post" action="/Account/SignUp">

                    <div class="form-group mb-3">
                        <label style="font-weight:600;">Full Name</label>
                        <input type="text" name="FullName" class="form-control" placeholder="Enter your full name" required />
                    </div>

                    <div class="form-group mb-3">
                        <label style="font-weight:600;">Email Address</label>
                        <input type="email" name="Email" class="form-control" placeholder="example@gmail.com" required />
                    </div>

                    <div class="form-group mb-3">
                        <label style="font-weight:600;">Phone Number</label>
                        <input type="text" name="Phone" class="form-control" placeholder="Enter your phone number" required />
                    </div>

                    <div class="form-group mb-3">
                        <label style="font-weight:600;">Address</label>
                        <textarea name="Address" class="form-control" rows="2" placeholder="Enter your address" required></textarea>
                    </div>

                    <div class="form-group mb-3">
                        <label style="font-weight:600;">Password</label>
                        <input type="password" name="Password" class="form-control" placeholder="Enter password" required />
                    </div>

                    <div class="form-group mb-4">
                        <label style="font-weight:600;">Confirm Password</label>
                        <input type="password" name="ConfirmPassword" class="form-control" placeholder="Re-enter password" required />
                    </div>

                    <button type="submit" class="btn w-100"
                            style="background:#ff69b4; color:white; font-weight:bold; border-radius:10px;">
                        Create Account
                    </button>

                    <p class="text-center mt-3">
                        Already have an account?
                        <a href="/Admin/AdminLogin" style="color:#ff69b4; font-weight:600; text-decoration:none;">
                            Login here
                        </a>
                    </p>
                </form>

            </div>
        </div>
    </div>
</div>
